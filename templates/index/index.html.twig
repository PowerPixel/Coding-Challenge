{% extends 'base.html.twig' %}

{% block title %}
    Coding Challenge
{% endblock %}
{% block titre_page %}Accueil{% endblock %}
{% block body %}
	<div class="container challenge-container">
	{% for challenge in challenges %}
		{% if loop.index0 % 3 == 0 %}
			<div class="row challenge-row">
		{% endif %}
				<div class="col-sm">
					<p>{{ challenge.id }}</p>
					<p>{{ challenge.StartDate|date("d/m/Y") }} - {{ challenge.EndDate|date("d/m/Y")  }}</p>
					<a href="{{ path("challenge",{ id: challenge.id}) }}"><div class="btn btn-primary">Accéder au challenge</div></a>
				</div>
		{% if loop.index0 % 6 == 3 %}
			</div>
		{% endif %}
	{% endfor %}
	</div>

	<div class="container exercise-container">
	{% for exercise in exercises %}
		{% if exercise.state.label == "Opened" %}
		<br/>
			<div class="col-sm">
				<p>{{ exercise.id }} - {{ exercise.name }} ({{ exercise.ApprovedDate|date("d/m/Y") }})</p>
				<p>{{ exercise.description }}</p>
				<a href="{{ path("exercise", {id: exercise.id}) }}"><div class="btn btn-primary">Accéder à l'exercice</div></a>
			</div>
		{% endif %}
	{% endfor %}
	</div>
{% endblock %}
