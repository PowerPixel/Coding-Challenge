{% extends 'base.html.twig' %}

{% block title %}{{ exercise.name }} - Coding Challenge{% endblock %}
{% block titre_page %}{{ exercise.id }} - {{ exercise.name }}{% endblock %}
{% block body %}
    <p>Difficulté : {{ exercise.difficulty }}</p>
    <p>{{ exercise.ApprovedDate|date("d/m/Y") }}</p>
    <p>{{ exercise.description }}</p>
    {% if  app.user %}
        <a href=""><div class="btn btn-primary">Résoudre l'exercice</div></a>
    {% else %}
        <a href="{{ path('app_register') }}">Inscrivez vouz</a> ou <a href="{{ path('app_login') }}">connectez vous</a> afin de résoudre l'exercice.
    {% endif %}
{% endblock %}