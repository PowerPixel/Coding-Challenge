{% extends "admin/admin_base.html.twig" %}

{% block content %}
    <h2>{{exercise.name}}</h2>
	<h5>Crée par {{ exercise.creator.username }}</h5>
	<p>Exercice soumis le {{ exercise.submitDate|date("d/m/Y")}}</p>
	<h3>Entrées</h3>
	<p>{{ inputDescription }}</p>
	<h3>Sorties</h3>
	<p>{{ outputDescription }}</p>
	<div id="IOCarousel" class="carousel slide bg-dark text-white" data-ride="carousel" data-interval="false">
		<ol class="carousel-indicators">
			{% for input in inputs %}
				{% if loop.index == 1 %}
					<li data-target="#IOCarousel" data-slide-to="0" class="active"></li>
				{% else %}
					<li data-target="#IOCarousel" data-slide-to="{{ loop.index }}"></li>
				{% endif %}
			{% endfor %}
		</ol>
		<div class="carousel-inner pb-5 pt-4 text-center">
			{% for input in inputs %}
				{% if loop.index == 1 %}
					<div class="carousel-item active">
					{% else %}
						<div class="carousel-item">
						{% endif %}
						<div class="d-block rounded">
							<h4>Jeu d'essai
								{{ loop.index }}</h4>
							<samp class="text-white bg-secondary rounded w-100 text-center" style="white-space: pre;">{{ input }}</samp>
							<h4>Sortie</h4>
							<samp class="text-white bg-secondary rounded text-center" style="white-space: pre;">{{outputs[loop.index0]}}</samp>
						</div>
					</div>
				{% endfor %}
			</div>
			<a class="carousel-control-prev" href="#IOCarousel" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Précédent</span>
			</a>
			<a class="carousel-control-next" href="#IOCarousel" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Suivant</span>
			</a>
		</div>
		<br>
		<a href="{{ path("exercises_approval_validate", {id: exercise.id}) }}"><button type="button" class="btn btn-success">Approuver l'exercice</button></a>
		<a href="{{ path("exercises_approval_denied", {id: exercise.id}) }}"><button type="button" class="btn btn-danger">Refuser l'exercice</button></a>

{% endblock %}